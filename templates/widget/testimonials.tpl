<!-- BEGIN widget.testimonials -->
<noindex>
<div class="widget testimonials">
    <div class="widget-title-small">
        <h2>Отзывы покупателей</h2>
    </div>

    <noindex>
    <!-- BEGIN widget.tst -->
    <article class="reviews-block">
        <div class="reviews-block-row">
            <!-- BEGIN widget.tst.picture -->
            <div class="img">
                <img src="images/people/l/{widget.tst.picture.SRC}" alt="Картинка">
            </div>
            <!-- END widget.tst.picture -->
            <div>
                <h6 class="autor">{widget.tst.NAME}</h6>
                <p class="city">{widget.tst.CITY}</p>
            </div>
            <div class="clearfix"></div>
        </div>
        <div class="reviews-block-discription">
            <p>{widget.tst.MESSAGE}</p>
        </div>
    </article>
    <!-- END widget.tst -->
    </noindex>

    <div class="button write">Добавить отзыв</div>
    <a href="testimonials" class="button gray">Все отзывы: {widget.testimonials.TOTAL}</a>
</div>
</noindex>
<!-- END widget.testimonials -->
